// Refer to docs in waybar github wiki:
// https://github.com/Alexays/Waybar/wiki/Configuration
{
  // Be in front of or behind other windows ("top" or "bottom").
  "layer": "top",
  // Bar position, can be top, bottom, left, right.
  "position": "left",
  // Minimal height (leave it empty to use full length).
  "height": 100,
  // "spacing": 20,
  "modules-left": ["niri/workspaces"],
  "modules-center": ["clock"],
  "modules-right": [
    "bluetooth",
    "network",
    // "upower",
    "wireplumber",
    "tray"
  ],

  // https://github.com/Alexays/Waybar/wiki/Module:-Niri
  "niri/workspaces": {
    "format": "",
    // "disable-click": true,
    "format-icons": {
      "active": "",
      "default": ""
    }
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-Clock
  "clock": {
    "align": 0.5,
    "justify": "center",
    "format": "{:%H\n%M}",
    // "tooltip": false
    "tooltip-format": "{:%a %b %e %I:%M %p %Z %Y}"
    // "tooltip-format": "{:%a, %Y-%m-%d, %I:%M %p %Z}"
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-Bluetooth
  "bluetooth": {
    "align": 0.5,
    "justify": "center",
    // "format": "{status}\n<span font='15'></span>", //  , 󰂯 , 󰂲
    "format": "<span font='15'></span>", //  , 󰂯 , 󰂲
    "format-disabled": "󰂲", // an empty format will hide the module
    "format-connected": " {num_connections} connected",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-Network
  "network": {
    "align": 0.5,
    "justify": "center",
    "format-wifi": "<span font='13'>󰒍</span>", // 󰖪 , 󰖩 ,  ,  , 󰤨 , 󰤭 , 󰒍 , 󰒎 , 󰛳
    // "format-wifi": "<span font='14'>󰛳</span>", // 󰖪 , 󰖩 ,  ,  , 󰤨 , 󰤭 , 󰒍 , 󰒎 , 󰛳
    "format-ethernet": "<span font='13'>󰒍</span>",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format-wifi": "{essid} ({signalStrength}%) 󰖩",
    "tooltip-format-ethernet": "{ifname} <span font='13'>󰒍</span>",
    "tooltip-format-disconnected": "Disconnected"
    // "max-length": 500
    // "rotate": 90
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-Battery
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-UPower
  "upower": {
    "align": 0.5,
    "justify": "center",
    "swap-icon-label": true,
    "format": "<span font='12'></span>",
    "icon-size": 15,
    "hide-if-empty": true,
    "tooltip": true,
    "tooltip-padding": 0,
    "tooltip-spacing": 0,
    "show-icon": false,
    "cursor": false
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-WirePlumber
  "wireplumber": {
    "align": 0.5,
    "justify": "center",
    // "format": "{volume}\n<span font='14'>{icon}</span>",
    "format": "<span font='14'>{icon}</span>\n{volume}",
    "format-muted": "<span font='13'>󰟎</span>\n{volume}",
    "format-icons": ["󰎆"], // 󰎄 , 󰎆 ,  , ,  ,  ,  ,  ,  , 󰋋 , 󰟎
    // "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-scroll-up": "", // disable the scroll actions
    "on-scroll-down": "", // disable the scroll actions
    "on-click": "",
    "cursor": false
  },

  // https://github.com/Alexays/Waybar/wiki/Module:-Tray
  "tray": {
    "icon-size": 17,
    "spacing": 6,
    "reverse-direction": true
  }
}
